@model EmpleadoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card">
  <div class="card-header">
    Eliminar Empleado
  </div>
  <div class="card-body">
    

      <form asp-action="Eliminar" asp-controller="Mantenedor" method="post">

       @* <input asp-for="IdContacto" type="hidden" class="form-control"> *@

       <div class="alert alert-danger" role="alert">
          ¿Desea eliminar el contacto : @Html.DisplayTextFor(m => m.NombreEmpleado) ?
        </div>

            <button type="submit" asp-route-idUsuario="@ViewBag.idUsuario" class="btn btn-danger">Eliminar</button>
      <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-warning">Volver a la lista</a>
    </form>


  </div>
</div>