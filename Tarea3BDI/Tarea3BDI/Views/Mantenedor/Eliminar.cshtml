@model EmpleadoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div>
    <p>¿Estás seguro de que quieres eliminar a @ViewBag.NombreEmpleado?</p>
    <form id="confirmarEliminarForm" method="post" action="@Url.Action("ConfirmarEliminar", "Mantenedor", new { NombreEmpleado = ViewBag.NombreEmpleado, idUsuario = ViewBag.idUsuario })">
        <button type="submit" class="btn btn-danger">Sí, eliminar</button>
        <a href="@Url.Action("Listar", "Mantenedor", new { idUsuario = ViewBag.idUsuario })" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            $("#confirmarEliminarForm").submit(function () {
                return confirm("¿Estás seguro de que quieres hacer esto?");
            });
        });
    </script>
}