@model LoginModel
@{
    ViewData["Title"] = "Logout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Login
    </div>
    <div class="card-body">
        <form asp-action="ValidacionLogin" asp-controller="Cuenta" method="post">
            <div class="mb-3">
                <label class="form-label">Pwd</label>
                <input asp-for="Pwd" type="text" class="form-control">
            </div>
            @* <div class="mb-3">
            <label class="form-label">Tipo</label>
            <input asp-for="Tipo" type="text" class="form-control">
            </div> *@
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input asp-for="Username" type="text" class="form-control">
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
</div>

