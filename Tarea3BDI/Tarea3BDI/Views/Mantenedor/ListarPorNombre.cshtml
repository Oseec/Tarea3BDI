@model List<EmpleadoModel>
@{
    ViewData["Title"] = "ListarPorNombre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
        Lista Empleados Por Nombre
    </div>
    <div class="card-body">

        <p>Using ViewBag: @ViewBag.idUsuario</p>
        @* <a asp-action="InsertarEmpleado" asp-controller="Mantenedor" asp-route-idUsuario="@ViewBag.idUsuario" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a> *@
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre Empleado</th>

                    <th>Fecha De Nacimiento</th>
                    <th>Tipo Documento</th>
                    <th>Valor Tipo Documento</th>
                    <th>Nombre Departamento</th>
                    <th>Nombre Puesto</th>
                    <th>Usuario</th>
                    <th>EsActivo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NombreEmpleado</td>
                        <td>@item.FechaDeNacimiento</td>
                        <td>@item.NombreTipoDocumento</td>
                        <td>@item.ValorTipoDocumento</td>
                        <td>@item.NombreDepartamento</td>
                        <td>@item.NombrePuesto</td>
                        <td>@item.Usuario</td>
                        <td>@item.EsActivo</td>
                        <td>
                            <a asp-action="ConfirmarEditar" asp-controller="Mantenedor" asp-route-idUsuario="@ViewBag.idUsuario" asp-route-NombreEmpleado="@item.NombreEmpleado" class="btn btn-primary btn-sm">Editar</a>
                            <a asp-action="Eliminar" asp-controller="Mantenedor" asp-route-idUsuario="@ViewBag.idUsuario" asp-route-NombreEmpleado="@item.NombreEmpleado" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>

                }
            </tbody>
            
        </table>
        <a asp-action="Listar" asp-controller="Mantenedor" asp-route-idUsuario="@ViewBag.idUsuario" class="btn btn-warning">Volver a la lista principal</a>

    </div>
</div>

