@model EmpleadoModel
@{
    ViewData["Title"] = "InsertarEmpleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.idUsuario = (object)ViewBag.idUsuario;
}

<div class="card">
    <div class="card-header">
        Insertar Empleado
    </div>
    <div class="card-body">
        
        <form asp-action="InsertarEmpleado" asp-controller="Mantenedor" method="post">
            <input asp-for ="IdUsuario" hidden value="@ViewBag.idUsuario" class="form-control">
            <div class="mb-3">
                <label class="form-label">Nombre del empleado</label>
                <input asp-for="NombreEmpleado" type="text" class="form-control">
                <p>Using ViewBag: @ViewBag.idUsuario</p>
            </div>
            <div class="mb-3">
                <label class="form-label">Fecha de Nacimiento</label>
                <input asp-for="FechaDeNacimiento" type="text" class="form-control">
            </div>
           @*  <div class="mb-3">
                <label class="form-label">Tipo de documento de identidad</label>
                <input asp-for="IdTipoDocumento" type="text" class="form-control">
            </div> *@


            <div>
                <label class="form-label" asp-for="IdTipoDocumento">Tipo de documento de identidad</label>
                <select class="form-select" aria-label="Default select example" asp-for="IdTipoDocumento">
                    <option selected>Elija el tipo de documento de identificacion</option>
                    <option value="1">Cedula Nacional</option>
                    <option value="2">Cedula Residente</option>
                    <option value="3">Pasaporte</option>
                    <option value="4">Cedula Juridica</option>
                    <option value="5">Permiso de Trabajo</option>
                    <option value="6">Cedula Extranjera</option>
                </select>
            </div>


            <div class="mb-3">
                <label class="form-label">Valor documento de identidad</label>
                <input asp-for="ValorTipoDocumento" type="text" class="form-control">
            </div>
           @*  <div class="mb-3">
                <label class="form-label">Departamento</label>
                <input asp-for="IdDepartamento" type="text" class="form-control">
            </div> *@

            <div>
                <label class="form-label" asp-for="IdDepartamento">Departamento</label>
                <select class="form-select" aria-label="Default select example" asp-for="IdDepartamento">
                    <option selected>Elija el Departamento</option>
                    <option value="1">Enlaminado</option>
                    <option value="2">Laboratorio</option>
                    <option value="3">Bodega de materiales</option>
                    <option value="4">Bodega de producto terminado</option>
                    <option value="5">Recursos Humanos</option>
                </select>
            </div>

           @*  <div class="mb-3">
                <label class="form-label">Puesto</label>
                <input asp-for="IdPuesto" type="text" class="form-control">
            </div> *@

            <div>
                <label class="form-label" asp-for="IdPuesto">Puesto</label>
                <select class="form-select" aria-label="Default select example" asp-for="IdPuesto">
                    <option selected>Elija el puesto</option>
                    <option value="1">Electricista</option>
                    <option value="2">Auxiliar de Laboratorio</option>
                    <option value="3">Operador de Maquina</option>
                    <option value="4">Contador</option>
                    <option value="5">Conserje</option>
                    <option value="6">Secretariado</option>
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Usuario</label>
                <input asp-for="Usuario" type="text" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input asp-for="Password" type="text" class="form-control">
            </div>
            @* <div class="mb-3">
                <label class="form-label">Activo</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="EsActivo" class="form-check-input" type="radio" name="inlineRadioOptions" value="true">
                <label class="form-check-label" for="inlineRadio1">1</label>
            </div>
            <div class="form-check form-check-inline">
                <input asp-for="EsActivo" class="form-check-input" type="radio" name="inlineRadioOptions" value="false">
                <label class="form-check-label" for="inlineRadio2">0</label>
            </div> *@
            <div>
                <button type="submit" class="btn btn-primary">Insertar</button>
                <a asp-action="Listar" asp-controller="Mantenedor" asp-route-idUsuario="@ViewBag.idUsuario" class="btn btn-warning">Volver a la lista</a>
            </div>
            
        </form>

     
    </div>
</div>

