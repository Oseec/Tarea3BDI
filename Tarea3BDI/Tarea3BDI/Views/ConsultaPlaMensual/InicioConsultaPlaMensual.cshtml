@model List<PlanillaMesXEmpleadoModel>
@{
    ViewData["Title"] = "InicioConsultaMensual";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Últimos 12 meses de planilla del empleado: @Model.FirstOrDefault()?.NombreEmpleado
    </div>
    <div class="card-body">
        <p>Using ViewBag: @ViewBag.idUsuario</p>
        <p>Using ViewBag: @ViewBag.IdEmpleado</p>
        <a asp-action="VerDetalleDeduccion" asp-controller="ConsultaPlaMensual" asp-route-idUsuario="@ViewBag.idUsuario" asp-route-IdEmpleado="@ViewBag.IdEmpleado" class="btn btn-primary btn-sm">Ver Detalles Deduccion</a>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Mes</th>
                    <th>Salario Bruto</th>
                    <th>Salario Neto</th>
                    <th>Total deducciones</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i=0; i<Model.Count; i++)
                {
                    <tr>
                        <td>@(i+1)</td>
                        <td>@Model[i].SalarioBruto</td>
                        <td>@Model[i].SalarioNeto</td>
                        <td>@Model[i].TotalDeducciones</td>
                        @* <td>
                            <a asp-action="VerDetalleDeduccion" asp-controller="ConsultaPlaMensual" asp-route-idUsuario="@ViewBag.idUsuario" asp-route-IdEmpleado="@ViewBag.IdEmpleado" class="btn btn-primary btn-sm">Ver Detalles Deduccion</a>
                        </td> *@
                    </tr>

                }
            </tbody>
        </table>


    </div>
</div>