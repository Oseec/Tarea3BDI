@model List<DeduccionesEmpleado>
@{
    ViewData["Title"] = "VerDetalleDeduccionSemanal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles Deduccion</h1>

<div class="card">
    @* <div class="card-header">
    Últimos 12 meses de planilla del empleado: @Model.FirstOrDefault()?.NombreEmpleado
    </div> *@
    <div class="card-body">
        <p>Using ViewBag: @ViewBag.idUsuario</p>
        <p>Using ViewBag: @ViewBag.IdEmpleado</p>
        @* <a asp-action="VerDetalleDeduccion" asp-controller="ConsultaPlaMensual" asp-route-idUsuario="@ViewBag.idUsuario" asp-route-IdEmpleado="@ViewBag.IdEmpleado" class="btn btn-primary btn-sm">Ver Detalles Deduccion</a> *@
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    @* <th>Mes</th> *@
                    <th>Nombre Deduccion</th>
                    <th>Porcentaje</th>
                    <th>Monto Deduccion</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        @* <td>@(i + 1)</td> *@
                        <td>@Model[i].NombreDeduccion</td>
                        <td>@Model[i].Porcentaje</td>
                        <td>@Model[i].MontoDeduccion</td>
                        @* <td>
                    <a asp-action="VerDetalleDeduccion" asp-controller="ConsultaPlaMensual" asp-route-idUsuario="@ViewBag.idUsuario" asp-route-IdEmpleado="@ViewBag.IdEmpleado" class="btn btn-primary btn-sm">Ver Detalles Deduccion</a>
                    </td> *@
                    </tr>

                }
            </tbody>
        </table>


    </div>
</div>

