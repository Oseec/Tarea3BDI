@model List<PlanillaSemanaXEmpleadoModel>
@{
    ViewData["Title"] = "InicioConsultaSemanal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Últimas 15 Planillas Semanales Por semana
    </div>
    <div class="card-body">
        <p>Using ViewBag: @ViewBag.idUsuario</p>
        <p>Using ViewBag: @ViewBag.IdEmpleado</p>
        <hr />
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Nombre Empleado</th>
                    <th>Salario Neto</th>
                    <th>Salario Bruto</th>
                    <th>Total deducciones</th>
                    <th>Horas Ordinarias</th>
                    <th>Horas Extra normales</th>
                    <th>Horas Extra dobles</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NombreEmpleado</td>
                        <td>@item.SalarioNeto</td>
                        <td>@item.SalarioBruto</td>
                        <td>
                            <a asp-action="VerDetalleDeduccionSemanal" asp-controller="ConsultaPlaSemanal" asp-route-idUsuario="@ViewBag.idUsuario" asp-route-IdEmpleado="@ViewBag.IdEmpleado" class="btn btn-primary btn-sm">
                                @item.TotalDeducciones
                            </a>
                        </td>
                        <td>@item.HorasOrdinarias</td>
                        <td>@item.HorasExtraNormales</td>
                        <td>@item.HorasExtraDobles</td>
                    </tr>

                }
            </tbody>
        </table>


    </div>
</div>


